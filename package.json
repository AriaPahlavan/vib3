{
  "version": "0.1.1",
  "name": "vib3",
  "author": "Aria Pahlavan",
  "description": "Just the good vibes of three.js without the boilerplate",
  "directories": {
    "test": "test"
  },
  "homepage": "https://github.com/ariapahlavan/vib3#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "watch": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/vib3.esm.js",
  "size-limit": [
    {
      "path": "dist/vib3.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/vib3.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/three": "^0.137.0",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "three": "^0.137.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ariapahlavan/vib3.git"
  },
  "bugs": {
    "url": "https://github.com/ariapahlavan/vib3/issues"
  },
  "keywords": [
    "three",
    "threejs",
    "typescript-library",
    "javascript-library",
    "javascript-library",
    "vanilla-javascript",
    "angular",
    "react"
  ]
}
